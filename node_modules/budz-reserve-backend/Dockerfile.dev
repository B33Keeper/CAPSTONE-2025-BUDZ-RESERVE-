FROM node:18-alpine

WORKDIR /app

# Install system dependencies
RUN apk add --no-cache mysql-client

# Copy package files
COPY backend/package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY backend/ .

# Create uploads directory
RUN mkdir -p uploads/avatars uploads/general

# Expose port
EXPOSE 3001

# TEMP: Run simple auth backend for development to unblock login/signup
CMD ["node", "simple-server.js"]

FROM node:18-alpine

WORKDIR /app

# Install system dependencies
RUN apk add --no-cache mysql-client

# Copy package files
COPY backend/package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY backend/ .

# Create uploads directory
RUN mkdir -p uploads/avatars uploads/general

# Make the startup script executable
RUN chmod +x start-dev.sh

# Expose port
EXPOSE 3001

# Run NestJS application in development mode with proper signal handling
CMD ["./start-dev.sh"]
